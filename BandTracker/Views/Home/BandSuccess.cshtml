@{
  Layout = "_Layout";
}

<body id="band-success">
  <div class="container">
    <div class="well success">
      <h1>The band <em>@Model.GetName()</em> has been successfully added!</h1>

      <p><strong>Band name:</strong> @Model.GetName()</p>
      <p><strong>Band price:</strong> $@Model.GetPrice()</p>
    </div>

    <a href="/view/bands"><button type="button" class="btn btn-default navbar-btn">View Bands</button></a>
    <a href="/view/venues"><button type="button" class="btn btn-default navbar-btn">View Venues</button></a>
    <a href="/"><button type="button" class="btn btn-default">Cancel</button></a>
    <a href="/"><button type="button" class="btn btn-default">Go home</button></a>
  </div>
</body>
