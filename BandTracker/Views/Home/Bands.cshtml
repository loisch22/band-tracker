@{
  Layout = "_Layout";
}

<body id="bands">
  <h1 class="header">Bands</h1>
  <div class="container">
    <div class="well band-well">
      <ul>
        @if (@Model.Count == 0)
        {
          <p class="detail">There are no bands added</p>
          <a href="/band/form"><button type="button" class="btn btn-default btn-update">Add Band</button></a>
        }
        else
        {
          @foreach (var band in Model)
          {
            <a class="band-list" href="/band/detail/@band.GetId()"><li class="list-space">@band.GetName()</li></a>
          }
        }
      </ul>
    </div>
  </div>
</body>
