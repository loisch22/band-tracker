@{
  Layout = "_Layout";
}

<body id="venue-details">
  <h1>Details for the venue: <em>@Model["venue"].GetName()</em></h1>

  <div class="container">
    <div class="well details">
      <p><strong>Venue name:</strong> @Model["venue"].GetName()</p>
      <p><strong>Venue price:</strong> $@Model["venue"].GetPrice()</p>
    </div>

    <p><strong>Past band performances:</strong></p>
      <ul>
        @foreach (var band in @Model["bands"])
        {
          <a href="/band/detail/@band.GetId()"><li>@band.GetName()</li></a>
        }
      </ul>

    <p><strong>Add another band to @Model["venue"].GetName():</strong></p>
    <form action='/venue/detail/@Model["venue"].GetId()' method="post" class="form-group">
      <label for="new-band">Band name:</label>
      <input type="text" name="band-name" class="form-control band-name">
      <label for="band-price">Band price:</label>
      <input type="text" name="band-price" class="form-control band-price">
      <button type="submit" class="btn btn-default venue-details-add-band">Add band</button>
    </form>
    <a href="/"><button type="button" class="btn btn-default">Go home</button></a>
  </div>
</body>
