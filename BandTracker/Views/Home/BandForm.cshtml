@{
  Layout = "_Layout";
}

<body id="band-form">
  <h1 class="header">Add a new band</h1>

  <div class="well details-past">

    <form action="/band/success" method="post" class="form-group">
      <label class="label" for="name">Band name:</label>
      <input type="text" name="name" class="form-control form-field">
      <label class="label" for="price">Band price:</label>
      <input type="text" name="price" class="form-control form-field">
      <button type="submit" class="btn btn-success create-band">Add band</button>
    </form>
  </div>
  <a href="/"><button type="button" class="btn btn-default form-btns">Go Home</button></a>
  <a href="/view/venues"><button type="button" class="btn btn-default form-btns">View Venues</button></a>

</body>
