@{
  Layout = "_Layout";
}

<body id="update-success">
  <div class="container">
    <div class="well success">
      <h1>The band was successfully updated</h1>

      <h2>Updated Information</h2>
      <p><strong>New band name:</strong> @Model.GetName()</p>
      <p><strong>New band price:</strong> $@Model.GetPrice()</p>
    </div>
    <a href="/band/detail/@Model.GetId()"><button type="button" class="btn btn-default view-venues">Back to @Model.GetName() details</button></a>
    <a href="/view/bands"><button type="button" class="btn btn-default">View Bands</button></a>
  </div>
</body>
